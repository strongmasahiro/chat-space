.chat-main__message-list__message{data: {message: {id: message.id}}}
  .chat-main__message-list__message__info
    .chat-main__message-list__message__info__member-name
      = message.user.name
    .chat-main__message-list__message__info__message-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message__detail
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?